{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"type": "object",
	"properties":
	{
        "eventDate" : {
          "description": "TODO: Get content off of Emily",
          "$ref": "#/definitions/ISO8601-Date"
        },
        "withdrawalAmount" : {
          "description": "This is the amount that the investor has requested to be released from the LISA account. You can include a value up to 2 decimal places.",
          "type" : "number"
        },
        "conveyancerReference": {
          "description": "TODO: TBC by Emily",
          "type": "string",
          "pattern": "^[a-zA-Z0-9 :/-]{1,20}$",
          "example": "CR12345-6789"
        },
        "propertyDetails": {
          "nameOrNumber": {
            "description": "The property name or number. This is only required when making a new request for a release of funds and not when superseding an existing one.",
            "type": "string",
            "pattern": "^[A-Za-z0-9 :/-]{1,60}$",
            "example": "1"
          },
          "postalCode": {
            "description": "TODO: TBC by Emily",
            "type": "string",
            "pattern": "^[A-Za-z0-9 ]{1,8}$",
            "example": "AA11 A11"
          },
          "purchaseValue": {
            "description": "TODO: TBC by Emily.",
            "type": "number"
          }
        },
        "supersededLifeEventId": {
          "description": "Life event id for the event that is being superseded.",
          "$ref": "#/definitions/IDType"
        },
        "supersededLifeEventDate": {
          "description": "Life event date for the event that is being superseded.",
          "$ref": "#/definitions/ISO8601-Date"
        }
	},
	"required": [
		"eventDate",
		"withdrawalAmount"
    ],
	"additionalProperties": false,
	"definitions":
	{
      "ISO8601-Date": {
        "id": "full-date",
        "type": "string",
        "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
        "example": "2017-05-06"
      },
      "IDType": {
        "type": "string",
        "pattern": "^\\d{10}$",
        "example": "0987654321"
      }
	}
}
