{
	"$schema": "http://json-schema.org/draft-04/schema",
	"type": "object",
	"properties":
	{
		"investorNINO": {
          "description": "The investor’s National Insurance number.",
          "$ref" : "#/definitions/NINOType"},
		"firstName" : {
          "description": "The investor’s first name.",
          "type" : "string",
          "pattern": "^[a-zA-Z &`\\-\\'^]{1,35}$",
		  "example": "FirstNameMe"
        },
		"lastName" : {
          "description": "The investor’s last name.",
          "type" : "string",
          "pattern": "^[a-zA-Z &`\\-\\'^]{1,35}$",
          "example": "lastNameDough"
        },
		"dateOfBirth": {
          "description": "The investor’s date of birth. This can't be in the future.",
          "$ref": "#/definitions/ISO8601-Date"}
	},
	"required": ["investorNINO","firstName","lastName","dateOfBirth"],
	"additionalProperties": false,
	"definitions":
	{
		"ISO8601-Date" :
		{
          "id": "full-date",
			"type": "string",
			"pattern": "^\\d{4}-\\d{2}-\\d{2}$",
             "example": "1989-04-22"
		},
		"NINOType": {
          "type": "string",
          "pattern": "^((?!(BG|GB|KN|NK|NT|TN|ZZ)|(D|F|I|Q|U|V)[A-Z]|[A-Z](D|F|I|O|Q|U|V))[A-Z]{2})[0-9]{6}[A-D]?$",
          "example": "BC123456D"
        }
	}
}
