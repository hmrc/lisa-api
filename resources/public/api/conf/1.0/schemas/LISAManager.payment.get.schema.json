{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "lisaManagerReferenceNumber": {
      "description": "The reference given to the LISA provider when they applied for approval from HMRC.",
      "$ref": "#/definitions/LISAManagerReferenceNumberType"
    },
    "payments": {
      "description": "Payments made by or due from HMRC in the specific date range.",
      "type": "array",
      "min": 1,
      "items": {
        "type": "object",
        "oneOf": [
          {
            "description": "Paid payment",
            "properties": {
              "paymentReference": {
                "description": "Payment reference number.",
                "$ref": "#/definitions/PaymentRefType"
              },
              "paymentAmount": {
                "description": "Amount paid to the LISA provider.",
                "type": "number",
                "example": "23456.00"
              },
              "paymentDate": {
                "description": "Date the payment was made.",
                "$ref": "#/definitions/ISO8601-Date"
              }
            },
            "required": [
              "paymentReference",
              "paymentAmount",
              "paymentDate"
            ],
            "additionalProperties": false
          },
          {
            "description": "Pending payment",
            "properties": {
              "paymentAmount": {
                "description": "Amount paid to the LISA provider.",
                "type": "number",
                "example": "23456.00"
              },
              "dueDate": {
                "description": "Date the payment was made.",
                "$ref": "#/definitions/ISO8601-Date"
              }
            },
            "required": [
              "paymentAmount",
              "dueDate"
            ],
            "additionalProperties": false
          }
        ]
      }
    }
  },
  "required": [
    "lisaManagerReferenceNumber",
    "payments"
  ],
  "additionalProperties": false,
  "definitions": {
    "LISAManagerReferenceNumberType": {
      "type": "string",
      "pattern": "^Z([0-9]{4}|[0-9]{6})$",
      "example": "Z1234"
    },
    "PaymentRefType": {
      "type": "string",
      "pattern": "^.{1,35}$",
      "example": "1234567890"
    },
    "ISO8601-Date": {
      "id": "full-date",
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
      "example": "2017-05-20"
    }
  }
}