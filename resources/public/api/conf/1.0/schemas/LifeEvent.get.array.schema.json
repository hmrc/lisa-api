{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "array",
  "minItems": 0,
  "uniqueItems": true,
  "items": {
    "type": "object",
    "properties": {
      "lifeEventId": {
        "$ref": "#/definitions/IDType"},
      "eventType" : {
        "$ref": "#/definitions/eventType"},
      "eventDate" : {
        "$ref": "#/definitions/ISO8601-Date"}
    },
    "required": [
      "lifeEventId",
      "eventType",
      "eventDate"
    ],
    "additionalProperties": false,
    "definitions":
    {
      "IDType": {
        "type": "string",
        "pattern": "^\\d{10}$",
        "example": "0987654321"
      },
      "ISO8601-Date" : {
        "id": "full-date",
        "type": "string",
        "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
        "example": "2017-05-20"
      },
      "eventType" : {
        "type" : "string",
        "enum": ["LISA Investor Terminal Ill Health", "LISA Investor Death"]
      }
    }
  }
}