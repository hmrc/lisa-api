{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"type": "object",
	"properties":
	{
		"lifeEventID" : {"$ref": "#/definitions/IDType"},
		"accountId" : {"$ref": "#/definitions/IDType"},
		"lisaManagerReferenceNumber" : {"$ref": "#/definitions/LISAManagerReferenceNumberType"},
        "eventType" : {"$ref": "#/definitions/eventType"},
		"eventDate" : {"$ref": "#/definitions/ISO8601-Date"}
	},
	"required": [
		"accountId",
		"lisaManagerReferenceNumber",
		"eventType",
		"eventDate"
	],
	"additionalProperties": false,
	"definitions":
	{
		"ISO8601-Date" : {
			"type": "string",
			"pattern": "^\\d{4}-\\d{2}-\\d{2}$"
		},
		"IDType": {
			"type": "string",
			"pattern": "^\\d{10}$"
		},
		"LISAManagerReferenceNumberType" : {
			"type" : "string",
			"pattern": "^Z\\d{6}$"
		},

		"eventType" : {
			"type" : "string",
			"enum": ["LISA Investor Terminal Ill Health", "LISA Investor Death", "House Purchase"]
		}
	}
}
